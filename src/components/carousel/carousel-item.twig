<li class="carousel-item">
  <div class="carousel-item__media">
    {%
      include '@components/media/media.twig' with {
        "image": item.image,
      } only
    %}
  </div>
  {% if item.title.0 %}
    <div class="carousel-item__content">
      {%
        include '@components/heading/heading.twig' with {
          "title": item.title,
          "heading_level": 2,
          "classes": "carousel-item__title"
        } only
      %}
      {% if item.button.text %}
        {%
          include '@components/button/button.twig' with {
            "text": item.button.text,
            "url": item.button.url,
          } only
        %}
      {% endif %}
    </div>
  {% endif %}
</li>
