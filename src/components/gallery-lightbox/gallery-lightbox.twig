{% if section_title %}
  {%
    include '@components/heading/heading.twig' with {
      "title": section_title,
      "heading_level": 2,
      "classes": "gallery-lightbox__title"
    } only
  %}
{% endif %}

{% if intro_text %}
  {%
    include '@components/body/body.twig' with {
      "body": intro_text,
      "classes": "gallery-lightbox__intro-text"
    } only
  %}
{% endif %}

<ul class="gallery-lightbox">
  {% block gallery_items %}
    {% for item in items %}
      {%
        include '@components/gallery-lightbox/gallery-lightbox-item.twig' with {
          "item": item
        } only
      %}
    {% endfor %}
  {% endblock %}
</ul>
