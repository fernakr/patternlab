<section class="hero">
  {%
    include '@rain_theme/media/media.twig' with {
      "image": media.image,
      "video": media.video
    } only
  %}

  <div class="hero__content">
    {%
      include '@rain_theme/eyebrow/eyebrow.twig' with {
        "text": eyebrow.text,
        "classes": eyebrow.classes,
      } only
    %}

    {%
      include '@rain_theme/heading/heading.twig' with {
        "title": heading.title,
        "heading_level": heading.level,
        "classes": heading.classes
      } only
    %}

    {%
      include '@rain_theme/body/body.twig' with {
        "body": body.text,
        "classes": body.classes
      } only
    %}

    {%
      include '@rain_theme/button/button.twig' with {
        "text": button.text,
        "url": button.url,
      } only
    %}
  </div>
</section>
