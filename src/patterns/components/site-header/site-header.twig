<header role="banner">
  <div class="region site-header-top">
    {%
      include '@archives_theme/user-account-nav/user-account-nav.twig' with {
        links: user_account_nav.links
      } only
    %}
  </div>
  <div class="region site-header-middle l-flex">
    <div class="l-container">
      {%
        include '@archives_theme/site-branding/site-branding.twig' with {
          links: site_branding.link
        } only
      %}
    </div>
  </div>
  <div class="region site-header-bottom">
    {%
      include '@archives_theme/main-menu/main-menu.twig' with {
        items: main_menu.items
      } only
    %}
    {%
      include '@archives_theme/breadcrumb/breadcrumb.twig' with {
        breadcrumb: breadcrumb
      } only
    %}
  </div>
</header>
